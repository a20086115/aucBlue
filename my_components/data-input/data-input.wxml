<!--my_components/data_input/data_input.wxml-->
<view class="data-input" style="{{ style }}">
  <view class="title">{{title}}</view>
  <view class="value"  bindtap="onTap">{{value}}</view>
  <van-dialog use-slot  title="{{ title }}" show="{{ show }}" show-cancel-button bind:confirm="onConfirm"  bind:close="onClose" >
    <view>
      <input class="edit-input" type="number" placeholder="{{value}}" confirm-type="done" />
      <view class="edit-tip">注：此处最小值为{{value}}, 最大值为{{value}}</view>
    </view>
  </van-dialog>
</view>
