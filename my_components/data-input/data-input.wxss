/* my_components/data_input/data_input.wxss */
.data-input{
  width:100%;
  display: flex;
  padding: 10rpx 30rpx;
  box-sizing: border-box
}
.title{
  width:40%;
  padding: 14rpx 0;
  text-align: right;
  box-sizing: border-box;
}
.value{
  width:60%;
  padding: 14rpx;
  box-sizing: border-box;
}
.border{
  border:1px solid gainsboro;
}
.noBorder{
  border:1px solid white;
}